{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "frontend/js/main.js",
    "frontend/js/api.js",
    "frontend/js/auth.js"
  ], // Inclui arquivos .ts e .d.ts
  "exclude": [
    "node_modules"
  ]
}