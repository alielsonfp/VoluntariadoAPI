{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types"
    ], // Define onde procurar por tipos
    "types": [
      "node",
      "jsonwebtoken"
    ] // Inclui os tipos globais
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "frontend/js/main.js",
    "frontend/js/api.js",
    "frontend/js/auth.js"
  ], // Inclui arquivos .ts e .d.ts
  "exclude": [
    "node_modules"
  ]
}